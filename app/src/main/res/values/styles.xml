<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text1">
        <item name="android:textColor">@color/textblue</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">@dimen/size1</item>
    </style>

    <style name="text2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size2</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_gravity">center|left</item>
    </style>

    <style name="inputtext">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size2</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_gravity">center|start</item>
        <item name="android:background">@drawable/edit_text_style</item>
        <item name="android:textColorHint">@color/grayinput</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="nickNameStyle">
        <item name="android:textSize">@dimen/nickNameSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/marginNickname</item>
    </style>

    <style name="logoStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/gray</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/logoSize</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">47dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="btnStyle">
        <item name="android:textSize">@dimen/btnText</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">@dimen/size2</item>
    </style>
</resources>